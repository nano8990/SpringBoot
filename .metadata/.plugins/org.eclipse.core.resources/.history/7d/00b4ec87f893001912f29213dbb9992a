$('input[name=region_id]').on('propertychange change keyup paste input', function() {
});

var onfocusRegionId = false;

function changeRegionId() {
	if (onfocusRegionId) {
		return;
	}
	onfocusRegionId = true;
	var inputLength = $('input[name=region_id]').length;
	inputList = [];
	for (var i = 0; i < inputLength; i++) {
		inputList.push($('input[name=region_id]:eq(' + i + ')').val());
	}
	if (inputList.includes('')) {
		spanString = '';
		for (var i = 0; i < inputLength; i++) {
			var eachInput = $('input[name=region_id]:eq(' + i + ')').val();
			if (eachInput != '') {
				spanString += '<input type="text" name="region_id" onfocus="changeRegionId()" placeholder="REGIONID" value="' + eachInput +'" /><br />';
			}
		}
		spanString += '<input type="text" name="region_id" onfocus="changeRegionId()" placeholder="REGIONID" /><br />';
		$('#spanRegionId').html(spanString);
	} else {
		var inputAppend = '<input type="text" name="region_id" onfocus="changeRegionId()" placeholder="REGIONID" /><br />';
		$('#spanRegionId').append(inputAppend);
	}
}