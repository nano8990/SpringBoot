<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.user.UserMapper">

	<select id="selectUserByIdx" parameterType="int" resultType="User">
		SELECT * FROM user WHERE idx = #{idx}
	</select>
	
	<select id="selectUserList" resultType="User">
		SELECT * FROM user
	</select>
	
	<select id="insertUser" parameterType="User">
		INSERT INTO user(name, locale) VALUES(#{name}, #{locale})
	</select>
</mapper>